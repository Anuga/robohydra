    <script src="<%= baseUrl %>/static/js/bootstrap-scrollspy.js"></script>
    <script src="<%= baseUrl %>/static/js/bootstrap-tab.js"></script>
    <script src="<%= baseUrl %>/static/js/bootstrap-tooltip.js"></script>
    <script src="<%= baseUrl %>/static/js/bootstrap-popover.js"></script>
    <script src="<%= baseUrl %>/static/js/bootstrap-button.js"></script>
    <script src="<%= baseUrl %>/static/js/bootstrap-collapse.js"></script>
    <script src="<%= baseUrl %>/static/js/bootstrap-carousel.js"></script>
    <script src="<%= baseUrl %>/static/js/bootstrap-typeahead.js"></script -->

  </body>
</html>
